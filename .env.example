# ArabicNotepad Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Database Configuration
# ----------------------
# MySQL database username
DB_USERNAME=your_database_username

# MySQL database password (keep this secure!)
DB_PASSWORD=your_secure_password

# JDBC connection URL
# Format: jdbc:mysql://hostname:port/database_name
DB_URL=jdbc:mysql://localhost:3306/arabic_notepad

# Optional: Specify the environment
# Values: DEVELOPMENT, TESTING, PRODUCTION, REMOTE
# ENVIRONMENT=PRODUCTION
